{
  "name": "Toxicity Changer Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A Chrome extension to change the toxicity level of text on web pages.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "js": ["content.js"],
      "type": "module",
      "matches": ["<all_urls>"]
    }
  ]
}